<h1>Make me a drink (recipe)!</h1>

<%= form_for @beverage do |f| %>
  <%= f.label :name %>
  <%= f.text_area :name, placeholder: "Enter drink name" %>
  <br/>
  <%= f.label :price %>
  <%= f.text_area :price, placeholder: "Enter $ amount" %>
  <br/>  
  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Enter drink description" %>
  <br/>
  <%= f.label :email %>
  <%= f.text_area :email, placeholder: "Enter drink's email" %>
  <br/>
  <%= f.submit 'Submit' %>
<% end %>